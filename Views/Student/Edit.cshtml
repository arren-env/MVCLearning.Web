@{
}

@model MVCLearning.Web.Models.Entities.Student

<h1>Edit Student</h1>

@if (Model is null)
{
    <p>No Student found with this Id</p>
}

else
{
    <form action="" method="post">

        <div class="mt-3">
            <label class="form-label" id="id">Id</label>
            <input type="text" class="form-control" id="id" asp-for="Id" readonly>
        </div>
        <div class="mt-3">
            <label class="form-label" id="name">Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name">
        </div>
        <div class="mt-3">
            <label class="form-label" id="email">Email</label>
            <input type="email" class="form-control" id="email" asp-for="Email">
        </div>
        <div class="mt-3">
            <label class="form-label" id="phone">Phone</label>
            <input type="text" class="form-control" id="phone" asp-for="Phone">
        </div>
        <div class="mt-3">
            <input type="checkbox" class="form-check-input" id="subscribed" asp-for="Subscribed">
            <label class="form-label" for="subscribed">Subscribed</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button class="btn btn-danger" asp-controller="Student" asp-action="Delete">Delete</button>
        </div>

    </form>
}